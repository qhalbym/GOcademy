<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/edit-course.css" />
    <title>Edit Course</title>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">GoCademy</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" href="/logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <section class="form-edit-course">
      <h1>Edit course</h1>
      <form action="/course/<%= courseData.id %>/edit" method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            value="<%= courseData.name %>"
            name="name"
            type="text"
            class="form-control"
            id="name"
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <input
            value="<%= courseData.description %>"
            name="description"
            type="text"
            class="form-control"
            id="description"
          />
        </div>
        <div class="mb-3">
          <label for="duration" class="form-label">Duration</label>
          <input
            value="<%= courseData.duration %>"
            name="duration"
            type="number"
            class="form-control"
            id="duration"
          />
        </div>
        <div class="mb-3">
          <label for="url" class="form-label">VideoURl</label>
          <input
            value="<%= courseData.videoUrl %>"
            name="videoUrl"
            type="text"
            class="form-control"
            id="url"
          />
        </div>
        <div class="mb-3">
          <label class="form-label">Category</label>
          <select name="CategoryId" class="form-select">
            <% result.forEach(el=> { %> <% if(el.id==courseData.Category.id) {
            %>
            <option selected value="<%= el.id %>"><%= el.name %></option>
            <% } else { %>
            <option value="<%= el.id %>"><%= el.name %></option>
            <% }%> <% }) %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
      </form>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

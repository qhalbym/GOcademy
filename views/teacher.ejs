<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/teacher.css">
  <title>Teacher Page</title>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">GoCademy</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button> 
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <section class="title">
    <% if(userData) { %>
      <h1 style="text-align: center;">Halaman teacher dengan username: <%= userData.username %>
      </h1>
      <br>
      <a class="btn btn-primary" href="/user/<%= userData.id %>">User detail</a>
      <% } %>
        <a class="btn btn-primary" href="/course/add">Add Course</a>
  </section>
  <br>
  <section class="course-list">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Duration</th>
          <th scope="col">Rating</th>
          <th scope="col">Category</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% courseData.forEach(el=> { %>
          <tr>
            <td>
              <%= el.name %>
            </td>
            <td>
              <%= el.description %>
            </td>
            <td>
              <%= el.duration %>
            </td>
            <td>
              <%= el.rating %>
            </td>
            <td>
              <%= el.Category.name %>
            </td>
            <td>
              <a class="btn btn-secondary" href="/course/<%= el.id %>/edit">Edit Course</a>
              <a class="btn btn-danger" href="/course/<%= el.id %>/delete">Delete Course</a>
            </td>
          </tr>
          <%}) %>
      </tbody>
    </table>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
</body>

</html>
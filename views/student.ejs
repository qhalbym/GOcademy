<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>GoCademy</title>
</head>
<body>
  <header>
    <nav style="background-color: #0b3142;" class="navbar navbar-expand-lg navbar-light">
      <div class="container-fluid">
        <a style="color: white; font-size: 20pt;" class="navbar-brand" href="/"><strong>Go</strong>Cademy</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a style="color: white;" class="nav-link active" aria-current="page" href="/course">Courses</a>
            </li>
            <li class="nav-item">
              <a style="color: white;" class="nav-link active" aria-current="page" href="/user/<%= userId %>">Profile</a>
            </li>
            <li class="nav-item">
              <a style="color: white;" class="nav-link active" aria-current="page" href="/logout">Log out</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header><br>
  <div class="container">
    <div class="row align-items-center justify-content-between">
      <div class="col-md-5">
        <img src="https://i.postimg.cc/J4pLVJ9K/GOcademy-Premium.png">
      </div>
      <div class="col-md-5">
        <div style="background-color: #0f5257;width: 92%; padding: 20px 20px 10px 10px;">
          <label for="myChart"><h6 style="color: white;">Top 10 Descendant of Archimedes</h6></label>
          <canvas id="myChart"></canvas>
        </div>
      </div>
    </div><br><br>
    <div class="row align-items-center">
      <% coursesData.forEach(e => { let i = 1 %>
      <% if( i % 4 == 0) '<div class="row align-items-center">' %>
      <div class="col-md-4">
        <a style="color: inherit;text-decoration: none;" href="/course/<%= e.id %>/watch">
          <div class="card-column" style="width: 20rem;">
            <div style="display: flex; height: 15rem;background-color: black;">
              <img style="width: 20rem; height: auto;" src="https://img.youtube.com/vi/<%= e.videoUrl%>/0.jpg" class="card-img-top my-auto" alt="">
            </div>
            <div style="height: 180px; width: 100%;" class="card-body">
              <h5 style="height: 40%;" class="card-title"><%= e.name %></h5>
              <p style="height: 50px; overflow: hidden;"><%= e.description %></p>
            </div>
            <div class="card-footer">
              <small class="text-muted">Uploaded <%= e.publisedTime %> ago</small>
            </div>
          </div>
        </a><br>
      </div>
      <% i++ }) %>
  </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
    const ctx = document.getElementById('myChart').getContext('2d');
    const label = '<%= label %>'.split(',');
    const myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: label,
            datasets: [{
                label: 'Minutes',
                data: '<%= data %>'.split(','),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }] 
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                      color: "white"
                    }
                },
                x: {
                    ticks: {
                      color: "white"
                    }
                },
            },
        }
    });
    </script>
    
</body>

</html>